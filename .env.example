# Токен Telegram-бота (получить у @BotFather)
BOT_TOKEN=123456789:ABC-Your-Telegram-Bot-Token

# URL базы данных (SQLite по умолчанию)
DATABASE_URL=sqlite+aiosqlite:///./bot.db

# Часовой пояс (для правильного времени напоминаний)
TZ=Asia/Vladivostok

# Режим запуска (category - выбор категории после согласия)
START_MODE=category

# Час отправки ежедневных напоминаний (24-часовой формат)
DAILY_REMINDER_HOUR=9
